@model IEnumerable<LMS.Models.schemaOccasion>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.KlassId })
</p>
<table class="table">
    <tr>
        <th>
            Startar
        </th>
        <th>
            Slutar
         </th>
        <th>
            Titel
        </th>
        <th>
            Beskrivning
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           
            @Html.DisplayFor(modelItem => item.startTime).ToString().Substring(0, 10)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endTime).ToString().Substring(0, 10)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name_for_schemaoccasion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        
        
            @if (Request.IsAuthenticated && User.IsInRole("teacher"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }
            
    </tr>
}

</table>
